#include <Wire.h>
#include <Adafruit_PWMServoDriver.h>

Adafruit_PWMServoDriver pwm = Adafruit_PWMServoDriver();

#define SERVOMIN  150 // this is the 'minimum' pulse length count (out of 4096)
#define SERVOMAX  600 // this is the 'maximum' pulse length count (out of 4096)

// our servo # counter
uint8_t servonum = 0;
const int NUM_SERVOS = 6; //for first arm
int starting[NUM_SERVOS] = {180,90,140,180,90,90};
int starting2[NUM_SERVOS]={180, 130, 140, 175, 90, 90};
void setup() {

  Serial.begin(9600);
  Serial.println("16 channel Servo test!");
  pwm.begin();
  
  pwm.setPWMFreq(60);  // Analog servos run at ~60 Hz updates
  int pulselen;
  for (int servoIndex = 0; servoIndex < NUM_SERVOS; servoIndex++)
  {
    pulselen = map(starting2[servoIndex],0,180,SERVOMIN,SERVOMAX);
    pwm.setPWM(servoIndex,0,pulselen);
    delay(500);
  }
  delay(2000);
  for (int servoIndex = 0; servoIndex < NUM_SERVOS; servoIndex++)
  {
    pulselen = map(starting[servoIndex],0,180,SERVOMIN,SERVOMAX);
    pwm.setPWM(servoIndex,0,pulselen);
    delay(1000);
  }
  pulselen = map(150,0,180,SERVOMIN,SERVOMAX);
  pwm.setPWM(2,0,pulselen);
  delay(1000);
  pulselen = map(110,0,180,SERVOMIN,SERVOMAX);
  pwm.setPWM(2,0,pulselen);
  delay(1000);
  pulselen = map(90,0,180,SERVOMIN,SERVOMAX);
  pwm.setPWM(3,0,pulselen);  
  delay(1000);
  pulselen = map(80,0,180,SERVOMIN,SERVOMAX);
  pwm.setPWM(3,0,pulselen);
  
}

void loop()
{
  
}
